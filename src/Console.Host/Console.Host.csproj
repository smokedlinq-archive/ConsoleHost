<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup Condition="'$(BUILD_BUILDID)' == ''">
    <BUILD_BUILDID>0</BUILD_BUILDID>
  </PropertyGroup>
  
  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <DebugType>full</DebugType>
    <VersionPrefix>0.0.1.$(BUILD_BUILDID)</VersionPrefix>
    <FileVersion>0.0.1.$(BUILD_BUILDID)</FileVersion>
    <AssemblyVersion>0.0.1.$(BUILD_BUILDID)</AssemblyVersion>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <Authors>https://github.com/smokedlinq/ConsoleHost</Authors>
    <Company>https://github.com/smokedlinq/ConsoleHost</Company>
    <Description>ConsoleHost library makes writing simple and testable .NET console apps easier.</Description>
    <PackageProjectUrl>https://github.com/smokedlinq/ConsoleHost</PackageProjectUrl>
    <RepositoryUrl>https://github.com/smokedlinq/ConsoleHost.git</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <PackageId>Console.Host</PackageId>
    <RootNamespace>System</RootNamespace>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Extensions.Configuration" Version="2.0.1" />
    <PackageReference Include="Microsoft.Extensions.Configuration.Binder" Version="2.0.1" />
    <PackageReference Include="Microsoft.Extensions.Configuration.CommandLine" Version="2.0.1" />
    <PackageReference Include="Microsoft.Extensions.Configuration.EnvironmentVariables" Version="2.0.1" />
    <PackageReference Include="Microsoft.Extensions.DependencyInjection" Version="2.0.0" />
    <PackageReference Include="Microsoft.Extensions.Logging" Version="2.0.1" />
    <PackageReference Include="Microsoft.Extensions.Logging.Console" Version="2.0.1" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Console.Host.Abstractions\Console.Host.Abstractions.csproj" />
  </ItemGroup>

</Project>
